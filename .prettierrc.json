{
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "singleAttributePerLine": true,
  "trailingComma": "all",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/helpers",
    "^@/core",
    "^@/types",
    "^@/components",
    "^@/composables",
    "^@/errors",
    "^@/assets",
    "^@/scss",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true
}